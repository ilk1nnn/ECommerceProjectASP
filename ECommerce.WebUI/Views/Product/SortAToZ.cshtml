@model ProductListViewModel

<p>
    <a href="/product/index" class="btn btn-outline-primary">BACK</a>

    <a href="/product/add" class="btn btn-outline-primary">Create New</a>
    <a href="/product/SortZToA" class="btn btn-outline-success">Z-A</a>
    <a href="/product/LowestToHighest" class="btn btn-outline-danger">Highest To Lowest</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>ProductName</th>
            <th>UnitPrice</th>
            <th>UnitsInStock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.UnitPrice
                </td>
                <td>
                    @item.UnitsInStock
                </td>
                <td>
                    <a class="btn btn-xs btn-success" asp-controller="Cart"
                   asp-action="AddToCart" asp-route-productId="@item.ProductId">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<product-list-pagerAZ current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize">

</product-list-pagerAZ>